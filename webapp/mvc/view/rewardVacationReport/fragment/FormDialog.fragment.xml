<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.time.control"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:table="sap.ui.table">
    <!-- <Dialog title="근무 및 근태 등록" contentWidth="1000px" contentHeight="auto" busyIndicatorDelay="0" busy="{/contentsBusy/dialog}" afterClose=".onDialogAfterClose"> -->
    <Dialog contentWidth="320px" busyIndicatorDelay="0" busy="{/contentsBusy/dialog}" showHeader="false">
        <buttons>
            <Button text="닫기" type="Emphasized" press=".onPressFormDialogClose"/>
        </buttons>
        <content>
            <VBox class="vCardBox">
                <table:Table id="FormTable" selectionMode="None" width="100%" columnHeaderHeight="45" rowHeight="44" rows="{/Formlist}" visibleRowCount="{/FormlistInfo/rowCount}" busyIndicatorDelay="0" busy="{/contentsBusy/FormTable}" noData="{i18n>MSG_00001}">
                    <table:columns>
                        <table:Column width="7rem">
                            <table:label>
                                <Label text="근태일자" textAlign="Center" width="100%"/>
                            </table:label>
                            <table:template>
                                <Text text="{Begda}" width="100%" textAlign="Center" wrapping="false" />
                            </table:template>
                        </table:Column>
                        <!-- <table:Column width="6rem">
                            <table:label >
                                <Label text="공제시작일" textAlign="Center" width="100%"/>
                            </table:label>
                            <table:template>
                                <Text text="{ path: 'Tmdat', type: 'sap.ui.time.mvc.model.type.Date' }" width="100%" textAlign="Center" wrapping="false" />
                            </table:template>
                        </table:Column> -->
                        <table:Column>
                            <table:label>
                                <Label text="시간" textAlign="Center" width="100%"/>
                            </table:label>
                            <table:template>
                                <Text text="{Stdaz}" width="100%" textAlign="Center" wrapping="false" />
                            </table:template>
                        </table:Column>
                    </table:columns>
                </table:Table>
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>