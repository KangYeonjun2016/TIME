<mvc:View controllerName="sap.ui.time.mvc.controller.timeAttendance.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.time.control"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified">
    <Page title="HOME" showHeader="false" class="timeRegistrationPage">
        <VBox class="contents-header">
            <HBox justifyContent="SpaceBetween" class="breadcrumbs">
                <custom:Breadcrumbs />
                <HBox class="button-group">
                    <!-- <Button icon="sap-icon://excel-attachment" text="Excel" press=".onPressExcelDownload" busyIndicatorDelay="0" busy="{/contentsBusy/table}" /> -->
                    <!-- https://doosan-my.sharepoint.com/:b:/p/boseul_kim/ETb3f1ZdCztFlqdoHk1ezvkBBJW-UQQo60dhR6p-DiFpFw?e=c9AJrE -->
                </HBox>
            </HBox>
        </VBox>
        <VBox class="contents">
            <HBox class="vCardBox" justifyContent="SpaceBetween" height="80px">
                <HBox class="form-bar" alignItems="Center">
                    <Label text="{i18n>LABEL_00220}" />
                    <ComboBox items="{/PersaList}" selectedKey="{/searchConditions/Werks}" busyIndicatorDelay="0" busy="{/contentsBusy/search}" enabled="{=${/Auth} === 'E' ? false : true}">
                        <core:Item key="{code}" text="{text}" />
                    </ComboBox>
                    <Label text="{i18n>LABEL_00219}" />
                    <Input width="100%" value="{/searchConditions/Otext}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest=".onSearchOrg" class="conspicuous-disabled" enabled="{=${/Auth} === 'H' ? true : false}" />

                    <Label text="대상자" />
                    <Input width="100%" value="{/searchConditions/Ename}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest=".onTargetUserChange" class="conspicuous-disabled" enabled="{=${/Auth} === 'E' ? false : true}" />

                    <Label text="신청기간" />
                    <DatePicker value="{/searchConditions/Begda}" width="120px"  valueFormat = "yyyyMMdd" displayFormat= "yyyy.MM.dd"/>
                    <DatePicker value="{/searchConditions/Endda}" width="120px"  valueFormat = "yyyyMMdd" displayFormat= "yyyy.MM.dd"/>

                    <Label text="조회구분" />
                    <ComboBox items="{/SearchType}" selectedKey="{/searchConditions/Dispck}" width="80px">
                        <core:Item key="{code}" text="{text}" />
                    </ComboBox>
                    <Button text="{i18n>LABEL_00100}" icon="/sap/public/bc/ui2/zui5_tesnahr/images/icon_search03.png" iconDensityAware="false" press=".onPressSearch" busyIndicatorDelay="0" busy="{/contentsBusy/search}" />
                </HBox>
                <HBox class="form-bar" alignItems="Center">
                    <Button text="매뉴얼" class="ButtonJustifyEnd" press=".onPressManual"/>
                    <Button icon="sap-icon://excel-attachment" text="Excel" press=".onPressExcelDownload" />
                </HBox>
            </HBox>
            <VBox class="vCardBox">
                <HBox>
                    <Label text="신청내역" class="SubTitle mt-10-px" />
                    <VBox class="justifyEnd mb-10-px" width="100%">
                        <HBox class="justifyEnd timeClosingButtonGroup">
                            <Button text="신규신청" class="minWidth32 ButtonJustifyEnd mb-5-px" type="Emphasized" press=".onPressNew"/>
                            <Button text="취소" class="minWidth32 ButtonJustifyEnd mb-5-px" type="Default" press=".onPressDelete"/>
                        </HBox>
                    </VBox>
                </HBox>
                <core:Fragment fragmentName="sap.ui.time.mvc.view.timeAttendance.fragment.Table" type="XML" />
            </VBox>
        </VBox>
    </Page>
</mvc:View>