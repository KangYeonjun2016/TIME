<core:FragmentDefinition xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">
    <table:Table id="Table" selectionMode="None" width="100%" columnHeaderHeight="45" rowHeight="44" rows="{/list}" visibleRowCount="{/listInfo/rowCount}" busyIndicatorDelay="0" busy="{/contentsBusy/table}" noData="{i18n>MSG_00001}">
        <table:columns>
            <table:Column width="3.5rem">
                <Label text="" textAlign="Center" width="100%"/>
                <table:template>
                    <CheckBox textAlign="Center" selected="{Selected}" editable="{= ${Appst} === '20'}" select="onCheckBoxSelect" />
                </table:template>
            </table:Column>
            <table:Column width="6.3rem">
                <Label text="신청일" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{ path: 'Appda', type: 'sap.ui.time.mvc.model.type.Date' }" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="3rem">
                <Label text="구분" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Appsttx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="5rem">
                <Label text="사번" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Pernr}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="5%">
                <Label text="성명" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Ename}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="8%">
                <Label text="부서" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Orgtx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="5%">
                <Label text="Title" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Zzcaltltx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="4%">
                <Label text="직책" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Zzpsgrptx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="4%">
                <Label text="직군" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Zzjobgrtx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="6.3rem">
                <Label text="적용년월" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{ path: 'Tmdat', type: 'sap.ui.time.mvc.model.type.Date' }" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="8rem">
                <Label text="적용년월 적용제도" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Zzchecktx2}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="7%">
                <Label text="근무일정 코드" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Schkz}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="250px">
                <Label text="근무일정" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Schkztx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="7%">
                <Label text="변경제도" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Zzchecktx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column>
                <Label text="사유" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Dtrsn}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="5%">
                <Label text="신청자" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Apnrename}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</core:FragmentDefinition>