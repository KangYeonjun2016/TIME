<mvc:View controllerName="sap.ui.time.mvc.controller.timeRegistration.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.time.control">
    <Page title="HOME" showHeader="false" class="NoScrollY timeRegistrationPage">
        <!-- enableScrolling="false" -->
        <VBox class="contents-header">
            <HBox justifyContent="SpaceBetween" class="breadcrumbs">
                <custom:Breadcrumbs />
            </HBox>
        </VBox>
        <VBox class="contents">
            <HBox>
                <core:Fragment fragmentName="sap.ui.time.mvc.view.timeRegistration.fragment.MyHolidayStateDiv" type="XML" />
                <core:Fragment fragmentName="sap.ui.time.mvc.view.timeRegistration.fragment.MyHolidayStateDiv2" type="XML" />
            </HBox>
            <HBox>
                <core:Fragment fragmentName="sap.ui.time.mvc.view.timeRegistration.fragment.WorkMonthSelect" type="XML" />
                <core:Fragment fragmentName="sap.ui.time.mvc.view.timeRegistration.fragment.WorkDays" type="XML" />
            </HBox>
            <VBox class='logBox'>
                <Label text="{/loginInfo}" class="logText"/>
            </VBox>
        </VBox>
    </Page>
</mvc:View>