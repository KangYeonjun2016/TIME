<mvc:View controllerName="sap.ui.time.mvc.controller.timeClosing.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:custom="sap.ui.time.control">
    <Page title="HOME" showHeader="false" class="timeClosingPage" enableScrolling="false">
        <VBox class="contents-header">
            <HBox justifyContent="SpaceBetween" class="breadcrumbs">
                <custom:Breadcrumbs />
            </HBox>
        </VBox>
        <VBox class="contents">
            <HBox class="vCardBox" justifyContent="SpaceBetween" height="80px">
                <HBox class="form-bar" alignItems="Center">
                    <Label text="{i18n>LABEL_00220}" />
                    <ComboBox items="{/PersaList}" selectedKey="{/searchDatas/Werks}" busyIndicatorDelay="0" busy="{/contentsBusy/search}" change=".setOrgehList" enabled="{=${/Auth} === 'H' ? true : false}">
                        <core:Item key="{code}" text="{text}" />
                    </ComboBox>
                    <Label text="{i18n>LABEL_00219}" />
                    <Input width="100%" value="{/searchDatas/Otext}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest=".onSearchOrg" class="conspicuous-disabled" enabled="{=${/Auth} === 'H' ? true : false}" />
                    <Label text="{i18n>LABEL_00122}" />
                    <DatePicker value="{/searchDatas/Yyyymm}" width="150px"  valueFormat = "yyyyMM" displayFormat= "yyyy.MM"/>

                    <!-- <Label textAlign="End" text="퇴사자 포함여부" visible="{=${/Auth} === 'H' ? true : false}"/> -->
                    <CheckBox text="퇴사자 포함여부" selected="{/searchDatas/Retirees}" visible="{=${/Auth} === 'H' ? true : false}" />
                    <Button text="{i18n>LABEL_00100}" icon="/sap/public/bc/ui2/zui5_tesnahr/images/icon_search03.png" iconDensityAware="false" press=".onPressSearchWithCheckHeader" busyIndicatorDelay="0" busy="{/contentsBusy/search}" />
                </HBox>
            </HBox>
            <HBox class="vCardBox">
                <VBox class="timeClosingDivLayout">
                    <core:Fragment fragmentName="sap.ui.time.mvc.view.timeClosing.fragment.Master" type="XML" />
                </VBox>
                <VBox class="ml-10-px">
                    <VBox class="vCardBox2">
                        <core:Fragment fragmentName="sap.ui.time.mvc.view.timeClosing.fragment.Header" type="XML"/>
                    </VBox>
                    <VBox class="pt-20-px">
                        <core:Fragment fragmentName="sap.ui.time.mvc.view.timeClosing.fragment.Detail" type="XML"/>
                    </VBox>
                </VBox>
            </HBox>
            <VBox class='logBox'>
                <Label text="{/loginInfo}" class="logText"/>
            </VBox>
        </VBox>
    </Page>
</mvc:View>