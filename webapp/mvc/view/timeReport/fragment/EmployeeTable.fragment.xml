<core:FragmentDefinition xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">
    <table:Table id="EmployeeTable" selectionMode="None" width="100%" columnHeaderHeight="60" rowHeight="44" rows="{/EmployeeList}" visibleRowCount="{/EmployeeListInfo/rowCount}" busyIndicatorDelay="0" busy="{/contentsBusy/table}" noData="{i18n>MSG_00001}">
        <table:columns>
            <table:Column width="10%">
                <Label text="이름" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Ename}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="5%">
                <Label text="직군" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Zzjobgrtx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column >
                <Label text="Title" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Zzcaltltx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column >
                <Label text="직책" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Zzpsgrptx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column >
                <Label text="소속" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Orgtx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column >
                <Label text="기간" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Month}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="70px">
                <!-- <Text text="{i18n>LABEL_00272}" textAlign="Center" width="100%" wrapping="false"/> -->
                <Label text="{i18n>LABEL_00272}" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avwdy}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="70px">
                <Label text="필요근무시간" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avnwh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="100px">
                <Label text="법적최대 근무가능시간" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avlwh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="70px">
                <Label text="근무계획시간" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avpwh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="70px">
                <Label text="근무실적시간" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avawh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="70px">
                <Label text="고정OT시간" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avfoh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="70px">
                <Label text="연장근무시간" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avoth}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="70px">
                <Label text="야간근무시간" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avnwh2}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="70px">
                <Label text="휴일근무시간" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avhwh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="70px">
                <Label text="휴일연장시간" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avhoh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</core:FragmentDefinition>