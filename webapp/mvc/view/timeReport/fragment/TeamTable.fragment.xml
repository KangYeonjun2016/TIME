<core:FragmentDefinition xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">
    <table:Table id="TeamTable" selectionMode="{= ${/Auth} === 'H' ? 'Single' : 'None' }" selectionBehavior="Row" width="100%" columnHeaderHeight="60" rowHeight="44" rows="{/TeamList}" visibleRowCount="{/TeamListInfo/rowCount}" busyIndicatorDelay="0" busy="{/contentsBusy/table}" noData="{i18n>MSG_00001}" rowSelectionChange=".onSelectionTeam">
        <table:columns>
            <table:Column sortProperty="Orgtx" filterProperty="Orgtx">
                <Label text="부서" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Orgtx}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="100px">
                <Label text="기간" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Month}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="125px">
                <Label text="평균소정 근로일수" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Avwdy}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="125px">
                <Label text="평균필요 근무시간" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Avnwh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="125px">
                <Label text="평균법적최대 근무 가능시간" textAlign="Center" width="100%" wrapping="true"/>
                <table:template>
                    <Text text="{Avlwh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="125px">
                <Label text="평균근무 계획시간" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Avpwh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="125px">
                <Label text="평균근무 실적시간" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Avawh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="125px">
                <Label text="평균연장 근무시간" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Avoth}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="125px">
                <Label text="평균야간 근무시간" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Avnwh2}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="125px">
                <Label text="평균휴일 근무시간" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Avhwh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
            <table:Column width="125px">
                <Label text="평균휴일 연장시간" textAlign="Center" width="100%"/>
                <table:template>
                    <Text text="{Avhoh}" width="100%" textAlign="Center" wrapping="false" />
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>
</core:FragmentDefinition>